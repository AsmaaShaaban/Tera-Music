@model MVCProJect.ViewModel.ListOfGenre

@{
	ViewBag.Title = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
@using (Html.BeginForm("CreateMusic", "MusicInstruments"))
{
	@Html.ValidationSummary(true,"you must fill out all req fields")
	<div class="form-group">
		@Html.LabelFor(c => c.Instrument.Name)
		@Html.TextBoxFor(c => c.Instrument.Name, new { @class = "form-control" })
		@Html.ValidationMessageFor(c=>c.Instrument.Name)
	</div>
	<div class="form-group">
		@Html.LabelFor(c => c.Instrument.InstructorName)
		@Html.TextBoxFor(c => c.Instrument.InstructorName, new { @class = "form-control" })

	</div>
	<div class="form-group">
		@Html.LabelFor(c => c.Instrument.CourseDuration)
		@Html.TextBoxFor(c => c.Instrument.CourseDuration, new { @class = "form-control" })

	</div>
	<div class="form-group">
		@Html.LabelFor(c => c.Instrument.GenreId)
		@Html.DropDownListFor(c => c.Instrument.GenreId, new SelectList(Model.Genres,"Id","Type"), "Select Instrument Type",new { @class = "form-control" })

	</div>
	@Html.HiddenFor(m=>m.Instrument.Id)
	@Html.AntiForgeryToken()
	<div class ="form-group">
		<button type="submit" class="btn btn-primary Btn">Save</button>
	</div>

}

@section scripts
{
	@Scripts.Render("~/bundles/jqueryval")
}


